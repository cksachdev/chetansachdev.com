<% if (item.categories && item.categories.length){ %>
    <%
        var categories = [];
        item.categories.forEach(function(category){
            categories.push('<a href="' + config.root + category.path + '">' + category.name + '</a>');
        });
    %>
    <div class="categories-container">
        <span class=""></span>
        <%- categories.join(' / ') %>
    </div>
    <% } %>